      <span style="font-family: 'Jost', sans-serif; font-size: 42.667px; color: #000; font-weight: 400; text-transform: uppercase; letter-spacing: 0.5px;">
        {{ section.settings.left_button }}
      </span>
    </div>
    <div class="banner-right" style="display: flex; align-items: center;">
      <a href="#" style="background: #FFF544; border: none; padding: 16px 38px; box-sizing: border-box; display: flex; align-items: center; gap: 10px; border-radius: 4px; cursor: pointer; transition: box-shadow 0.2s;">
        <span style="font-family: 'Jost', sans-serif; font-size: 42.667px; font-weight: 400; color: #000; text-transform: uppercase;">{{ section.settings.right_button }}</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="60" height="24" viewBox="0 0 60 24" fill="none" aria-hidden="true">
          <path d="M0 12H57" stroke="#000" stroke-width="3"/>
          <path d="M48 3L57 12L48 21" stroke="#000" stroke-width="3"/>
        </svg>
      </a>
    </div>
  </div>

  <h2 class="banner-main-title" style="font-family: 'Jost', sans-serif; font-size: 47.08px; font-weight: 400; color: #000; margin: 30px 0 10px 0; line-height: 140%;">
    {{ section.settings.main_title }}
  </h2>
  
  <p class="banner-main-subtitle" style="font-family: 'Jost', sans-serif; font-size: 20px; color: #000; font-weight: 400; margin: 0 0 15px 0;">
    {{ section.settings.subtitle }}
  </p>
  
  <p class="banner-tagline" style="font-family: 'Jost', sans-serif; font-size: 42.667px; color: #000; font-weight: 400; text-align: center; margin: 26px 0 0 0;">
    {{ section.settings.tagline }}
  </p>
    
  <div class="shopnow-button-row" style="display: flex; justify-content: center; margin: 45px 0 0 0;">
    <a href="#" style="background: #111; width: 517.8px; height: 117.7px; display: flex; align-items: center; justify-content: center; text-decoration: none;">
      <span style="font-family: 'Jost', sans-serif; color: #fff; font-size: 37.67px; font-weight: 400; text-transform: uppercase; letter-spacing: 1px; margin-right: 32px;">
        {{ section.settings.cta_text }}
      </span>
      <svg xmlns="http://www.w3.org/2000/svg" width="60" height="50" viewBox="0 0 60 50" fill="none">
        <path d="M0 25H57" stroke="#fff" stroke-width="3"/>
        <path d="M48 5L57 25L48 45" stroke="#fff" stroke-width="3"/>
      </svg>
    </a>
  </div>

  <p class="banner-mini" style="font-family: 'Jost', sans-serif; color: #000; font-size: 42.667px; font-weight: 400; text-align: center; margin: 36px 0 0 0;">
    {{ section.settings.info_text }}
  </p>
</section>

<style>
  .banner-section-custom h2.banner-main-title {margin-top: 0;}
  .banner-right a:hover, .shopnow-button-row a:hover {box-shadow: 0 8px 32px rgba(0,0,0,0.10);}
  @media (max-width: 800px) {
    .banner-section-custom .banner-row, .shopnow-button-row {flex-direction: column !important; gap: 18px;}
    .banner-section-custom {padding: 30px 8px;}
    .shopnow-button-row a {width: 90vw !important;}
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "left_button",
      "label": "Left Top Button Text",
      "default": "VISION"
    },
    {
      "type": "text",
      "id": "right_button",
      "label": "Right Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Heading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Banner Tagline",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Shop Now Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "textarea",
      "id": "info_text",
      "label": "Banner Info Text",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Custom Banner EcomExperts"
    }
  ]
}
{% endschema %}

