<section class="theme-test-section" style="background:#f7fafc;padding:60px 0;text-align:center;">
  <div>
    <h2 style="color:#2a3652;font-size:2.1rem;">{{ section.settings.heading }}</h2>
    <p style="color:#476086;font-size:1.08rem;margin:18px 0 0 0;">{{ section.settings.description }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Test Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is the Test Section"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This section was added as per reviewer request to demonstrate section creation in Shopify.You can customize this message for any test or dummy content."
    }
  ],
  "presets": [
    {
      "name": "Test Section"
    }
  ]
}
{% endschema %}
